<%- include('../_layouts/adminheader'); %>
<br>
<h2 class="page-title">Edit a Category</h2>
<a href="/admin/categories" class="btn btn-primary">Back to All Categories</a>
<br><br>

<form action="/admin/categories/edit-category/<%= id %>" method="post">
   <div class="from-group">
    <label for="">Title</label>
    <input type="text" class="form-control" name="title" value="<%= typeof title != 'undefined' ? title : '' %>" placeholder="Title">
   </div> 
   <button type="submit" class="btn btn-success mt-1">Submit</button>
</form>
<%- include('../_layouts/adminfooter'); %>