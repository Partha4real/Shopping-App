<%- include('./_layouts/header'); %>
<div class="row products">
    <% for(let i of product){ %>
        <div class="col-xs-12 col-md-4 product">
            <a href="/products/<%= i.category %>/<%= i.slug %>" class="product_link">
                <img src="/uploads/<%= i.category %>/<%= i.title %>/<%= i.image %>" class="img-fluid product_image">
            </a>
            <h4><%= i.title %></h4>
            <h5>â‚¹ <%= parseFloat(i.price).toFixed(2) %></h5>
            <a href="/products/<%= i.category %>/<%= i.slug %>" class="view_details">View Details</a>
        </div>
    <% } %>
</div>
<%- include('./_layouts/footer'); %>